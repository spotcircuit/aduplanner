        "webhook_events": "config/api/jogg_options/webhook_events.json"
      }
    }
  },
  "api": {
    "jogg": {
      "base_url": "https://api.jogg.ai/v1",
      "headers": {
        "Content-Type": "application/json",
        "x-api-key": "$JOGG_API_KEY"
      },
      "endpoints": {
        "product": "/product",
        "generate_video": "/projects/generate",
        "avatars": {
          "custom": "/avatars/custom",
          "all": "/avatars",
          "my": "/avatars/my",
          "instant": "/avatars/instant"
        },
        "voices": {
          "all": "/voice",
          "custom": "/voice/custom"
        },
        "visual_styles": "/visual_styles",
        "music": "/music",
        "templates": {
          "all": "/templates",
          "custom": "/templates/custom"
        },
        "webhooks": {
          "all": "/webhooks",
          "events": "/webhooks/events"
        }
      }
    }
  }
}
