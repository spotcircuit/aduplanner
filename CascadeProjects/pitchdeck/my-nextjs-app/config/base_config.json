{
  "paths": {
    "config_dir": "config",
    "video_config": "config/video",
    "api_config": "config/api",
    "jogg_options": "config/api/jogg_options",
    "data_dir": "data",
    "responses_dir": "data/responses",
    "cache_dir": "data/cache",
    "output_dir": "data/output",
    "logs_dir": "data/logs",
    "leads_dir": "data/leads",
    "templates_dir": "data/templates",
    
    "files": {
      "target_audiences": "config/target_audiences.json",
      "apollo_data": "data/leads/apollo_data.json",
      "apollo_csv": "data/leads/APOLLOCLEANSHOPIFYOWNERS.csv",
      "lead": "data/leads/lead.json",
      "avatars": "config/avatars.json",
      
      "jogg": {
        "public_avatars": "config/api/jogg_options/public_avatars.json",
        "custom_avatars": "config/api/jogg_options/custom_avatars.json",
        "voices": "config/api/jogg_options/voices.json",
        "custom_voices": "config/api/jogg_options/custom_voices.json",
        "visual_styles": "config/api/jogg_options/visual_styles.json",
        "music": "config/api/jogg_options/music.json",
        "templates": "config/api/jogg_options/templates.json",
